{% extends 'base.html.twig' %}

{% block body %}

<div class="picture">
    <h1>{{ title }}</h1>
</div>

<table class="table container">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Prenom</th>
      <th scope="col">Categorie</th>
      <th scope="col">Association</th>

      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
      {% for annonce in annonces %}
    <tr>
      <td>{{ annonce.id }}</td>
      <td>{{ annonce.prenom }}</td>
      <td>{{ annonce.categorie.titre }}</td>
      <td>{{ annonce.user.nomAssociation}}</td>

      <td>    <a class="btn btn-primary mb-4" href="{{ path('blog_edit', {'id': annonce.id}) }}">Modifier</a>
      </td>


    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
