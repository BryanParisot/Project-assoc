<!-- Annonces -->
<div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4">

  {% for article in articles %}
        <div class="col mb-4">
        <div class="card">
          {% for image in article.images %}
          <img src="{{ asset('/uploads/' ~ image.name) }}" class="card-img-top" alt="..." height="250" width="370" ">
          {% endfor%}

          <div class="card-body">
            <h5 class="card-title">{{ article.prenom }}</h5>
            <!-- Permet d'afficher les 50 premier caractères du grand descriptif pour donne un avant gout -->
            <p class="card-text">{{ article.grandDescriptif | raw |u.truncate(50, ' ...') }}</p>
            <p> l'annonce a été mis en ligne le : {{ article.createdAt | date('d/n/Y') }}</p>
            <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Voir l'animal</a>
            </div>
        </div>
        </div>
    {% endfor%}
  </div>
</div>
<div class="container d-flex justify-content-center">
{{ knp_pagination_render(articles) }}
</div>

