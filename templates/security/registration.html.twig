{% extends 'base.html.twig'%}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<div class="picture">
    <h1>{{ title }}</h1>
</div>

<div class="container"> 

    <!--Début du formulaire-->
    {{ form_start(form) }}


<div class="container">

    {{ form_row(form.nom, {'label': 'Nom du président de l\'association','attr': {'placeholder':'Entrer le nom ici *'}}) }}
    {{ form_row(form.prenom, {'label': 'Prenom du président de l\'association','attr': {'placeholder':'Entrer le prenom ici *'}}) }}
    {{ form_row(form.nomAssociation) }}
    {{ form_row(form.ville, {'attr': {'placeholder': "Entrer la ville ou se situe l'association *"}}) }}
    {{ form_row(form.adresse, {'attr': {'placeholder': "Entrer l'adresse ou se situe l'association *"}}) }}
    {{ form_row(form.numeroTelephone, {'attr': {'placeholder': "Entrer le numéro de l'association *"}}) }}
    {{ form_row(form.numeroRna, {'attr': {'placeholder': "Entrer juste les numéro pas la lettre *"}}) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.confirm_password) }}

        <button class="btn btn-primary mb-4 mt-4" type="submit">
            {% if editMode %}
                Enregister les modification

            {% else %}
                Inscription 

            {% endif %}
        </button>

</div>


    <!--Fin du formulaire-->
    {{ form_end(form) }}
{% endblock%}